{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@daylix/components": ["components/src/index.ts"],
      "@daylix/core": ["core/src/index.ts"],
      "@daylix/core/graphql/generated": ["core/src/lib/graphql/generated"],
      "@daylix/core/utils": ["core/src/lib/utils"],
      "@daylix/core/data-access": ["core/src/lib/data-access/index.ts"],
      "@daylix-ui/components": ["daylix-ui/src/lib/components/"],
      "@daylix-ui/hooks": ["daylix-ui/src/lib/hooks/index.ts"],
      "@daylix/*": ["components/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
